{
    "manifest_version": 2,
    "name": "Dofus Hunt Fast Travel",
    "version": "1.0",
    "description": "Provide a fast way to copy position on Dafus Hunt Webside with the /travel command.",
    "content_scripts": [
        {
            "css": [ "css/toggle-switch.css" ],
            "matches": [
                "https://dofus-map.com/*/hunt"
            ],
            "js": ["js/fasttravel.js"]
        }
    ],

    "browser_action": {
        "default_icon": {                
            "16": "images/icon16x16.png",        
            "32": "images/icon32x32.png",         
            "96": "images/icon96x96.png"          
        },
        "default_title" : "Dofus Hunt Fast Travel"
    },

    "background":{
        "persistent": false,
        "scripts": ["js/background.js"]
    },

    "permissions": ["tabs"]
}

