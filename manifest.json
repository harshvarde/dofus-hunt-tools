{
    "manifest_version": 2,
    "name": "Dofus Hunt Tools",
    "version": "1.1",
    "description": "Provide some functions to the Dafus Hunt Webside thats make the hunt more easy",
    "content_scripts": [
        {
            "css": [ "css/toggle-switch.css" ],
            "matches": [
                "https://dofus-map.com/*/hunt"
            ],
            "js": [
                "js/fasttravel.js",
                "js/pasteposs.js"
            ]
        }
    ],

    "browser_action": {
        "default_icon": {                
            "16": "images/icon16x16.png",        
            "32": "images/icon32x32.png",         
            "96": "images/icon96x96.png"          
        },
        "default_title" : "Dofus Hunt Fast Travel"
    },

    "background":{
        "persistent": false,
        "scripts": ["js/background.js"]
    },

    "permissions": ["tabs"]
}

